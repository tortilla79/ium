CREATE DATABASE tutoring;
USE tutoring;
CREATE TABLE user(
       id SMALLINT NOT NULL AUTO_INCREMENT,
       privilege ENUM('admin','client') NOT NULL,
       username VARCHAR(20) NOT NULL,
       password VARCHAR(20) NOT NULL,
       PRIMARY KEY(id)
);
CREATE TABLE teacher(
       id TINYINT NOT NULL AUTO_INCREMENT,
       name VARCHAR(20) NOT NULL,
       surname VARCHAR(20) NOT NULL,
       PRIMARY KEY(id)  
);
CREATE TABLE subject(
       name VARCHAR(20)
);
CREATE TABLE teacher_subject(
       teacher TINYINT NOT NULL,
       subject VARCHAR(20) NOT NULL,
       FOREIGN KEY teacher
       	       REFERENCES teacher(id),
	       ON DELETE CASCADE
	       ON UPDATE CASCADE,
       FOREIGN KEY (subject)
       	       REFERENCES subject(name)
       	       ON DELETE CASCADE
	       ON UPDATE CASCADE	       
);
CREATE TABLE lesson(
       user SMALLINT NOT NULL,
       teacher TINYINT NOT NULL,
       subject VARCHAR(20) NOT NULL,
       appintment DATE NOT NULL,
       day ENUM('mon','tue','wed','thu','fry','sat','sun') NOT NULL,
       hour INT NOT NULL,
       status ENUM('done','book','annul'),
       CHECK(hour>14 AND hour<19),
       FOREIGN KEY user REFERENCES user(id),
       FOREIGN KEY subject REFERENCES subject(name)
       	       ON DELETE NO ACTION
	       ON UPDATE CASCADE,
       FOREIGN KEY teacher REFERENCES teacher(id)
       	       ON DELETE NO ACTION
	       ON UPDATE CASCADE,
       PRIMARY KEY (user, teacher, subject, when, hour)
);
